
{
  "manifest_version": 3,
  "name": "豆包阅读位置标记",
  "version": "1.0",
  "description": "在豆包对话中标记阅读位置，随时回溯",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"], 
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["platforms/doubao.js"]
    }
  ]
}